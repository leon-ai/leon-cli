{
  "name": "leon-cli",
  "version": "0.0.0-development",
  "private": true,
  "description": "Command-line interface (CLI) for a better use of Leon.",
  "keywords": [
    "automation",
    "voice-assistant",
    "artificial-intelligence",
    "leon",
    "cli",
    "assistant",
    "personnal-assistant"
  ],
  "author": {
    "name": "Louis Grenard",
    "email": "louis.grenard@gmail.com",
    "url": "https://twitter.com/louistiti_fr"
  },
  "license": "MIT",
  "homepage": "https://getleon.ai",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leon-ai/leon-cli.git"
  },
  "bugs": {
    "url": "https://github.com/leon-ai/leon-cli/issues"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=5.0.0"
  },
  "files": [
    "build",
    "config",
    "logs"
  ],
  "main": "build/index.js",
  "bin": {
    "leon": "build/index.js"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": "./src",
    "collectCoverage": true,
    "coverageDirectory": "../coverage/",
    "coverageReporters": [
      "text",
      "cobertura"
    ]
  },
  "ts-standard": {
    "ignore": [
      "build",
      "node_modules"
    ],
    "envs": [
      "node",
      "jest"
    ],
    "report": "stylish"
  },
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start": "node build/index.js",
    "develop": "tsc --watch",
    "lint": "ts-standard",
    "test": "jest"
  },
  "dependencies": {
    "adm-zip": "0.5.5",
    "axios": "0.21.1",
    "chalk": "4.1.1",
    "clipanion": "3.0.0-rc.12",
    "execa": "5.1.1",
    "extract-zip": "2.0.1",
    "get-stream": "6.0.1",
    "ora": "5.4.1",
    "semver": "7.3.5",
    "typanion": "3.3.1",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "12.1.4",
    "@types/adm-zip": "0.4.34",
    "@types/jest": "26.0.23",
    "@types/mock-fs": "4.13.0",
    "@types/node": "15.14.0",
    "@types/semver": "7.3.6",
    "@types/uuid": "8.3.0",
    "jest": "27.0.6",
    "mock-fs": "5.0.0",
    "mocked-env": "1.3.4",
    "rimraf": "3.0.2",
    "semantic-release": "17.4.4",
    "ts-jest": "27.0.3",
    "ts-standard": "10.0.0",
    "typescript": "4.3.5"
  }
}
