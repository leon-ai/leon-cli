{
  "name": "leon-cli",
  "version": "0.0.0-development",
  "private": true,
  "description": "Command-line interface (CLI) for a better use of Leon.",
  "keywords": [
    "automation",
    "voice-assistant",
    "artificial-intelligence",
    "leon",
    "cli",
    "assistant",
    "personnal-assistant"
  ],
  "author": {
    "name": "Louis Grenard",
    "email": "louis.grenard@gmail.com",
    "url": "https://twitter.com/louistiti_fr"
  },
  "license": "MIT",
  "homepage": "https://getleon.ai",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leon-ai/leon-cli.git"
  },
  "bugs": {
    "url": "https://github.com/leon-ai/leon-cli/issues"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "build",
    "config",
    "logs"
  ],
  "main": "build/index.js",
  "bin": {
    "leon": "build/index.js"
  },
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start": "node build/index.js",
    "develop": "tsc --watch",
    "lint:commit": "commitlint",
    "lint:editorconfig": "editorconfig-checker",
    "lint:markdown": "markdownlint '**/*.md' --dot --ignore node_modules",
    "lint:typescript": "eslint '**/*.{js,ts,jsx,tsx}'",
    "test:unit": "jest",
    "test:e2e-docker": "jest --testNamePattern='Docker' --config='jest.e2e.config.json' --forceExit",
    "test:e2e-classic": "jest --testNamePattern='Classic' --config='jest.e2e.config.json' --forceExit",
    "release": "semantic-release"
  },
  "dependencies": {
    "adm-zip": "0.5.9",
    "axios": "0.24.0",
    "chalk": "4.1.2",
    "clipanion": "3.1.0",
    "execa": "5.1.1",
    "extract-zip": "2.0.1",
    "get-stream": "6.0.1",
    "ora": "5.4.1",
    "read-pkg": "5.2.0",
    "semver": "7.3.5",
    "typanion": "3.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-conventional": "15.0.0",
    "@types/adm-zip": "0.4.34",
    "@types/jest": "27.0.3",
    "@types/mock-fs": "4.13.1",
    "@types/node": "16.11.12",
    "@types/semver": "7.3.9",
    "@types/wait-on": "5.3.1",
    "@typescript-eslint/eslint-plugin": "4.32.0",
    "editorconfig-checker": "4.0.2",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard-with-typescript": "21.0.1",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "5.2.0",
    "eslint-plugin-unicorn": "39.0.0",
    "jest": "27.4.3",
    "markdownlint-cli": "0.30.0",
    "mock-fs": "5.1.2",
    "mocked-env": "1.3.5",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "semantic-release": "18.0.1",
    "ts-jest": "27.1.0",
    "typescript": "4.5.2",
    "wait-on": "6.0.0"
  }
}
